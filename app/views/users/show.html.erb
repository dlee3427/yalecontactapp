<body>
    <section class="py-5">
        <div class="container">
        </div >
    </section>

    <section id="section-b">
        <div class="row">
            <div class="col-5">

                <div class="b">
                    <div class="container">
                        <h6>Dashboard</h6>
                        <h1><b><%= @user.name %></b></h1>
                        <hr class="my-4">
                    </div>
                    <div class="container">  
                        <div class="header-a">
                        <h6>Residential College</h6>
                        <h3><%= @user.res_college.name %></h3>
                        </div>
                    </div>

                    <div class="container">
                        <h6>Class Year</h6>
                        <h3><%= @user.class_year%></h3>
                    </div>

                    <div class="container">
                        <h6>User Type</h6>
                        <h3><%= @user.user_type%></h3>
                    </div>

                    <div class="container">
                        <h6>Current Status</h6>
                        <% if @user.contagious? %>
                        <h3 style="color: red">Contagious</h3>
                        <% else %>
                        <h3>Not Contagious</h3>
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="col-7">

                <div class="container">
                    <h5>Recent Visits</h5>
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Location</th>
                                <th scope="col">Start/End Time</th>
                                <th scope="col">Exposure?</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @recent_visits.each do |visit| %>
                            <% if visit.exposure %>
                                <tr style="background-color:#FF9999">
                                    <td><%= visit.start_time.to_date %></td>
                                    <td><%= visit.location.name %></td>
                                    <td><%= visit.times_to_s %></td>
                                    <td><b><%= link_to "Yes", visit_path(visit) %></b></td>
                                </tr>
                            <% else %>
                                <tr>
                                    <td><%= visit.start_time.to_date %></td>
                                    <td><%= visit.location.name %></td>
                                    <td><%= visit.times_to_s %></td>
                                    <td>No</td>
                                </tr>
                            <% end %>
                        <% end %>
                        </tbody>
                    </table>
                    <a class="btn btn-first btn-sm" href="/visits">See all visits</a>
                <div>

                <br>
                <hr class="my-4"/>

                <div class="container">
                    <h5>Recent Tests</h5>
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">Result</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @recent_tests.each do |test| %>
                            <% if test.result == "positive" %>
                                <tr  style="background-color:#FF9999">
                                    <td><%= test.date.to_date %></td>
                                    <td><%= test.date.to_s(:time) %></td>
                                    <td><b>Positive</b></td>
                                </tr>
                            <% else %>
                                <tr>
                                    <td><%= test.date.to_date %></td>
                                    <td><%= test.date.to_s(:time) %></td>
                                    <td>Negative</td>
                                </tr>
                            <% end %>
                        <% end %>
                        </tbody>
                    </table>
                    <a class="btn btn-first btn-sm" href="/tests">See all tests</a>
                <div>
            <div>
        <div>
    </section>
</body>
